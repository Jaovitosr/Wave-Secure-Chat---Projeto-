<div class="form-group msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, class: "d-flex", html: { multipart: true }) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
    <%= f.file_field :image, id: 'chat-image', class: "form-control msg-image" %>
    <%= f.submit "Enviar", data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>
